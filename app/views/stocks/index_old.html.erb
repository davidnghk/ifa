<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Name</th>
      <th>Last price</th>
      <th>Pricing date</th>
      <th>Return</th>
      <th>Risk</th>
      <th>Sharpe</th>
      <th>Alpha</th>
      <th>Parent</th>
      <th>No of prices</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.ticker %></td>
        <td><%= stock.name %></td>
        <td><%= stock.last_price %></td>
        <td><%= stock.pricing_date %></td>
        <td><%= stock.roi %></td>
        <td><%= stock.risk %></td>
        <td><%= stock.sharpe %></td>
        <td><%= stock.alpha %></td>
        <td><%= stock.parent_id %></td>
        <td><%= stock.no_of_prices %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

